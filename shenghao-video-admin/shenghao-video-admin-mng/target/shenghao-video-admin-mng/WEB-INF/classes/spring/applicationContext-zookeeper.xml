<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd">

	<description>zookeeper 放入spring容器, 项目启动的时候就建立和创建和zk的连接</description>

	<!--1. 创建重连策略, 可以设置重连的次数, 重连的时间间隔-->
	<bean id="retryPolicy" class="org.apache.curator.retry.ExponentialBackoffRetry">
		<!--每次重试连接的等待时间-->
		<constructor-arg index="0" value="1000"></constructor-arg><!--baseSleepTimeMs, 重连的间隔时间-->
		<!--设置的重连的次数-->
		<constructor-arg index="1" value="5"></constructor-arg><!--maxRetries最大尝试重连次数-->
	</bean>

	<!--2. 创建zookeeper客户端-->
	<bean id="client" class="org.apache.curator.framework.CuratorFrameworkFactory"
		  factory-method="newClient" init-method="start">
		<!--zookeeper所在的地址(ip加端口号)-->
		<!--<constructor-arg index="0" value="192.168.117.129:2181"></constructor-arg>-->
		<constructor-arg index="0" value="127.0.0.1:2181"></constructor-arg>
		<!--超时时间为10秒-->
		<constructor-arg index="1" value="10000"></constructor-arg>

		<constructor-arg index="2" value="10000"></constructor-arg>

		<constructor-arg index="3" ref="retryPolicy"></constructor-arg>
	</bean>

    <!--客户端配置-->
    <bean id="ZKCurator" class="com.shenghao.service.util.ZKCurator" init-method="init">
        <constructor-arg index="0" ref="client"></constructor-arg>
    </bean>
</beans>
